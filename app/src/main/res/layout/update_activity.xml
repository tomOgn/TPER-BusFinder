<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:layout_marginRight="15dp"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_lines"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp" />

    <ProgressBar
        android:id="@+id/progressBarLines"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:indeterminate="false"
        android:max="100"
        android:minHeight="50dp"
        android:minWidth="200dp"
        android:progress="1"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/textViewLines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_progress_bar_start"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_stops"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp" />

    <ProgressBar
        android:id="@+id/progressBarStops"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:indeterminate="false"
        android:minHeight="50dp"
        android:minWidth="200dp"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/textViewStops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_progress_bar_start"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_paths"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp" />

    <ProgressBar
        android:id="@+id/progressBarPaths"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:indeterminate="false"
        android:minHeight="50dp"
        android:minWidth="200dp"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/textViewPaths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_progress_bar_start"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">
        <Button
            android:id="@+id/buttonDone"
            style="?android:attr/textAppearanceLarge"
            android:background="@drawable/button_selector"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal|center"
            android:text="@string/label_wait"
            android:enabled="false"/>
    </LinearLayout>
</LinearLayout>