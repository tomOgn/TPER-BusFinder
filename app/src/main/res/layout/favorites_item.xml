<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:padding="10dip">
    <LinearLayout
        android:id="@+id/widgetLayout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/widgetName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"/>
            <TextView
                android:id="@+id/widgetDistance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="14sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="150dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/widgetBus1"
                        android:layout_height="wrap_content"
                        android:layout_width="70dp"
                        android:layout_gravity="start|center_vertical"
                        android:layout_weight="1"
                        android:paddingStart="5dp"
                        android:background="#ffffff"
                        android:textSize="20sp"
                        android:textColor="#0b5c7a" />
                    <TextView
                        android:id="@+id/widgetTime1"
                        android:layout_height="wrap_content"
                        android:layout_width="70dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="#0b5c7a"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:paddingStart="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/widgetBus2"
                        android:layout_height="wrap_content"
                        android:layout_width="70dp"
                        android:layout_gravity="start|center_vertical"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:textColor="#0b5c7a"
                        android:textSize="20sp"
                        android:paddingStart="5dp" />
                    <TextView
                        android:id="@+id/widgetTime2"
                        android:layout_height="wrap_content"
                        android:layout_width="70dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="#0b5c7a"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:paddingStart="5dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginStart="20dp"
                android:gravity="end">
                <ImageView
                    android:id="@+id/favoriteMap"
                    android:background="@drawable/button_selector"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/google_map"/>
                <ImageView
                    android:id="@+id/favoriteUpdate"
                    android:background="@drawable/button_selector"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/update"/>
                <ImageView
                    android:id="@+id/favoriteRemove"
                    android:background="@drawable/button_selector"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/remove"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout >